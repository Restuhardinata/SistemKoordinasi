<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pencarian Istilah" />

    <TextView android:text="ISTILAH :"
        android:id="@+id/TextView01"
        android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

    <EditText android:text="" android:id="@+id/txtISTILAH"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></EditText>

    <Button android:text="SEARCH" android:id="@+id/btnSEARCH"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:onClick="getSEARCH"></Button>

    <TextView android:text="DESKRIPSI :"
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <EditText android:text="" android:id="@+id/txtDESKRIPSI"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:editable="false"></EditText>

</LinearLayout>